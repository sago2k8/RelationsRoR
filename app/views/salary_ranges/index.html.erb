<p id="notice"><%= notice %></p>

<h1>Listing Salary Ranges</h1>

<table>
  <thead>
    <tr>
      <th>Min salary</th>
      <th>Max salary</th>
      <th>Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salary_ranges.each do |salary_range| %>
      <tr>
        <td><%= salary_range.min_salary %></td>
        <td><%= salary_range.max_salary %></td>
        <td><%= salary_range.job %></td>
        <td><%= link_to 'Show', salary_range %></td>
        <td><%= link_to 'Edit', edit_salary_range_path(salary_range) %></td>
        <td><%= link_to 'Destroy', salary_range, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

